case "$(uname -s)" in
    Linux*)     OS=linux;;
    *)          OS=mac
esac

if [ "$OS" = linux ]
then
    alias gnu-grep=grep
    alias gnu-sed=sed
else
    alias gnu-grep=ggrep
    alias gnu-sed=gsed
fi

autoload -Uz add-zsh-hook
for file in ${HOME}/.config/zsh/config.d/*.zsh; do
    source "${file}"
done

if [ "$OS" = linux ]
then
    task minimal | boxes -d shell -p t2b2l5r5 | lolcat
fi
