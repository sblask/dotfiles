#navigator-toolbox > #TabsToolbar {
    -moz-binding: url("chrome://browser/content/customizableui/toolbar.xml#toolbar") !important;
}

.tabbrowser-tab:not([pinned]):hover .tab-close-button {
    display: block !important;
}
.tabbrowser-tab:not(:hover) .tab-close-button {
    display: none !important;
}

#personal-bookmarks .bookmark-item {
    list-style-image: none !important;
}

#personal-bookmarks .bookmark-item .toolbarbutton-text {
    display: none !important;
}

#personal-bookmarks .bookmark-item image {
    background-position: right !important;
    background-repeat: no-repeat !important;
    background-size: 16px !important;
    padding: 0 9px !important;
}

#personal-bookmarks .bookmark-item[label="Facebook"] image {
    background-image: url(data:image/png;base64,) !important;
}

