{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "pip_requirements": {
    "fileMatch": [
      "requirements-.+\\.txt"
    ]
  },
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "pre-commit": {
    "enabled": true
  },
  "rebaseWhen": "never",
  "regexManagers": [
    {
      "datasourceTemplate": "github-tags",
      "fileMatch": [
        "^ansible/utils\\.yml$"
      ],
      "matchStrings": [
        "(?<currentValue>[v.0-9]+)  # (?<depName>[^ \\n]+)"
      ]
    }
  ]
}
