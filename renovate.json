{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-tags",
      "fileMatch": [
        "^.github/workflows/pre-commit\\.yml$",
        "^ansible/appimages\\.yml$",
        "^ansible/asdf\\.yml$",
        "^ansible/utils\\.yml$"
      ],
      "matchStrings": [
        "(?<currentValue>[v.0-9]+)  # (?<depName>[^ \\n]+)"
      ]
    }
  ],
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "groupName": "ansible",
      "matchPackagePatterns": [
        ".*ansible.*"
      ]
    },
    {
      "groupName": "yamllint",
      "matchPackagePatterns": [
        "yamllint"
      ]
    },
    {
      "extends": [
        "schedule:monthly"
      ],
      "matchPackageNames": [
        "aws-cli",
        "renovatebot/pre-commit-hooks"
      ]
    }
  ],
  "pip_requirements": {
    "fileMatch": [
      "requirements-.+\\.txt"
    ]
  },
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "pre-commit": {
    "enabled": true
  },
  "rebaseWhen": "never",
  "regexManagers": [
    {
      "datasourceTemplate": "github-tags",
      "fileMatch": [
        "^ansible/appimages\\.yml$",
        "^ansible/asdf\\.yml$",
        "^ansible/utils\\.yml$"
      ],
      "matchStrings": [
        "(?<currentValue>[v.0-9]+)  # (?<depName>[^ \\n]+)"
      ]
    }
  ]
}
