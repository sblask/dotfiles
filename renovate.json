{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^v?(?<version>[.0-9]+)$",
      "fileMatch": [
        "^.github/workflows/pre-commit\\.yml$",
        "^ansible/appimages\\.yml$",
        "^ansible/asdf\\.yml$",
        "^ansible/utils\\.yml$",
        "^ansible/utils-rust\\.yml$"
      ],
      "matchStrings": [
        "v?(?<currentValue>[.0-9]+)  # renovate: (?<depName>[^ \\n]+)",
        "version: (?<currentValue>[.0-9]+)\\}  # renovate: (?<depName>[^ \\n]+)"
      ]
    }
  ],
  "extends": [
    "config:recommended"
  ],
  "ignoreDeps": [
    "aquasecurity/tfsec",
    "aquasecurity/trivy",
    "terraform-linters/tflint"
  ],
  "packageRules": [
    {
      "automerge": true,
      "automergeType": "branch",
      "groupName": "ansible",
      "matchPackageNames": [
        "ansible-core",
        "ansible-lint",
        "ansible/ansible-lint"
      ]
    },
    {
      "groupName": "yamllint",
      "matchPackageNames": [
        "adrienverge/yamllint",
        "yamllint"
      ]
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "extends": [
        "schedule:monthly"
      ],
      "matchPackageNames": [
        "aws-cli",
        "cli/cli",
        "ipython",
        "pyright",
        "renovatebot/pre-commit-hooks"
      ]
    }
  ],
  "pip_requirements": {
    "fileMatch": [
      "requirements-.+\\.txt"
    ]
  },
  "prConcurrentLimit": 0,
  "prHourlyLimit": 1,
  "pre-commit": {
    "enabled": true
  },
  "rebaseWhen": "auto"
}
